<div class="container">
  <h1>Update <%= @client.name %></h1>
  <div class="row">
    <div class="col-sm-4">
      <form action="/clients/<%= @client.id %>" method="post">
        <input type="hidden" name="_method" value="patch">

        <input type="text" name="name" placeholder="Update Client Name" autofocus>

        <button class = "btn waves-effect waves-light" type="submit">Update</button>
      </form><br>
      <form action="/clients/<%= @client.id %>" method="post">
        <input type="hidden" name="_method" value="delete">

        <button class = "btn waves-effect waves-light" type="submit">Delete</button>
      </form><br>
        <a href="/" class="btn">Home</a>
    </div>
  </div>
</div>
